{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "pretty": true,
    "skipLibCheck": true,
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
