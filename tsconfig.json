{
  "compilerOptions": {
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnreachableCode": false,
    "pretty": true
  },
  "include": [ "src" ],
  "exclude": [
    "node_modules"
  ]
}
